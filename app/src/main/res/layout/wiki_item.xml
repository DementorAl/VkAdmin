<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wiki Page name"
        android:id="@+id/WikiPageName"
        android:textColor="@color/vk_color"
        android:background="@color/vk_white"
        android:gravity="center_vertical|left"
        android:clickable="true"
        android:layout_toRightOf="@+id/space"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Space
        android:layout_width="4px"
        android:layout_height="4px"
        android:layout_alignBottom="@+id/WikiPageName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space" />

    <Space
        android:layout_width="4px"
        android:layout_height="4px"
        android:layout_alignBottom="@+id/WikiPageName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/space2" />

    <Space
        android:layout_width="2px"
        android:layout_height="2px"
        android:layout_toRightOf="@+id/space"
        android:layout_below="@+id/WikiPageName"
        android:layout_toLeftOf="@+id/space2" />

</RelativeLayout>