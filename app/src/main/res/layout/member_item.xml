<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/abc_ab_bottom_solid_light_holo">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/userInGroupAvatar_k"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Имя пользователя"
        android:id="@+id/userNameInMembersItem_a"
        android:layout_below="@+id/imageView"
        android:layout_alignParentEnd="false"
        android:layout_toRightOf="@+id/userInGroupAvatar_k"
        android:layout_alignBottom="@+id/userInGroupAvatar_k"
        android:textAlignment="center"
        android:textSize="22dp"
        android:gravity="center|left|top"
        android:autoText="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Заблокировать"
        android:id="@+id/make_ban_button"
        android:singleLine="false"
        android:textColor="@color/vk_color"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/abc_ab_bottom_solid_light_holo" />

</RelativeLayout>