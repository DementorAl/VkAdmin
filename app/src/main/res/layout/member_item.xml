<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/vk_grey_color">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/userInGroupAvatar_k"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Имя пользователя"
        android:id="@+id/userNameInMembersItem_a"
        android:layout_below="@+id/imageView"
        android:layout_alignParentEnd="false"
        android:layout_alignBottom="@+id/userInGroupAvatar_k"
        android:textAlignment="center"
        android:textSize="22dp"
        android:gravity="center"
        android:background="@color/vk_white"
        android:textColor="@color/vk_color"
        android:layout_toRightOf="@+id/space" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignBottom="@+id/userInGroupAvatar_k"
        android:layout_toRightOf="@+id/userInGroupAvatar_k"
        android:id="@+id/space" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/userInGroupAvatar_k"
        android:layout_toLeftOf="@+id/space" />

</RelativeLayout>